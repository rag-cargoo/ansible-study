global:
  scrape_interval: 15s # Set the scrape interval to every 15 seconds. Default is 1m.

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090'] # Prometheus scrapes itself

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['{{ hostvars[groups["monitoring_servers"][0]]["ansible_default_ipv4"]["address"] }}:9100'] # Node Exporter on the same host

  - job_name: 'node_exporter_remote' # New job for remote targets
    static_configs:
      - targets:
{% for host in groups['node_exporter_targets'] %}
          - "{{ hostvars[host]['ansible_default_ipv4']['address'] }}:9100"
{% endfor %}
